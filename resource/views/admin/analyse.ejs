<% if(posts[0]){ %>
<div class="center">
<canvas id="myChart" width="400" height="200"></canvas>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<% }else { %>
<div class="center">
    <p>اطلاعاتی وجود ندارد!</p>
</div>
<% } %> 

<% if(posts[0]){ %>  
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Views', 'Comments', 'AllUsers','activeUsers'],
        datasets: [{
            label: '# of Numbers',
            data: [<%= posts[0].total %>, <%= comments %>, <%= users %>,<%= activeUsers %>],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(255,207,90,0.3)'
    
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(255,162,235,1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>
<% } %>