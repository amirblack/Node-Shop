<div class="row">
    <div class="container">
        <div class="col s12">
            <%- include(viewPath('layout/error')) %>
            <div class="card-panel border-radius-10">
                <h5 class="center">ایجاد حساب کاربری</h5>
                <form action="/auth/signup" method="post">
                
                    <div class="row">
                        <div class="input-field col s12"><input class="validate" id="name" type="text"
                                name="name" placeholder="نام تان را وارد کنید"></div>
                        <div class="input-field col s12"><input  id="email" type="email" name="email"
                                data-length="20" placeholder="ایمیل تان را وارد کنید"></div>
                        <div class="input-field col s12 "><input class="validate" id="password" type="password"
                                name="password" data-length="30" placeholder="رمز عبور را وارد کنید"></div>
                        <div class="input-field col s12 "><input class="validate" id="passwordConfirm"
                                type="password" name="passwordConfirm" placeholder="رمز عبور را مجددا تکرار کنید"></div>
                        <div class="input-field col s6">
                            <%- recap %>
                        </div> 
                        <div class="col s12">
                        <p>
                        <label>
                        <input type="checkbox" class="filled-in" onclick="seePassword()" />
                        <span>دیدن رمز عبور</span>
                        </label>
                        </p>
                        </div>
                    </div>

                    <div class="center"><button class="btn pink  waves-effect waves-light" type="submit">ثبت نام</button>
                        <p> حساب کاربری داری؟
                            <a href="/auth/login">وارد حساب شو!</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript"> 
    $(document).ready(function(){
    $('.sidenav').sidenav();
    })
</script>

<script>
function seePassword() {
  var password = document.getElementById("password");
  var repassword = document.getElementById("passwordConfirm")
  if (password.type === "password" && repassword.type === "password") {
    password.type = "text";
    repassword.type = "text";
  } else {
    password.type = "password";
    repassword.type = "password"
  }
}
</script>