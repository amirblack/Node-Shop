<div class="row">
    <h1 class="hide">صفحه بازگردانی رمزعبور حساب کاربری لیجیاتو</h1>
    <div class="container">
        <div class="col s12">
            <%- include(viewPath('layout/error')) %>
            <div class="card-panel border-radius-10">
                <h5 class="center">رمز عبورتان را فراموش کردید؟</h5>
                <form action="/auth/reset" method="post">
                <input type="hidden" name="_csrf" value="<%= req.csrfToken() %>">
                    <div class="row">
                        <div class="input-field col s12"><input  id="email" type="email" name="email"
                                data-length="20" value="<%= old('email') %>" placeholder="ایمیل را وارد کنید"></div>
                    <div class="input-field col s12">
                        <%- recap %>
                    </div>
                    </div>
                    <div class="center"><button class="btn pink  waves-effect waves-light" type="submit"
                            name="action">ارسال ایمیل!</button>
                        <p>برگشتن به 
                            <a href="/auth/login">صفحه ورود</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include(viewPath('layout/sweetAlert')) %>